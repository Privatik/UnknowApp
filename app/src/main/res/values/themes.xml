<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UnknowApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ebony_clay</item>
        <item name="colorPrimaryVariant">@color/ebony_clay</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_pink</item>
        <item name="colorSecondaryVariant">@color/dark_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/ebony_clay</item>
    </style>

    <style name="Theme.UnknowApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UnknowApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UnknowApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/dark_pink_</item>                   <!--header background-->
        <item name="android:windowBackground">@color/ebony_clay</item>      <!--calendar background-->
        <item name="android:colorControlActivated">@color/dark_pink_</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/white</item>           <!--days of the month-->
        <item name="android:textColorSecondary">@color/white</item>         <!--days of the week-->
    </style>
</resources>